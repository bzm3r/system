#!/usr/bin/env bash
set -euo pipefail


echo "Making iso..."

host="$(echo $HOSTNAME)" #$(hostname)

exec ~/nixos-conf/realize-template ~/nixos-conf/min-iso/specific-scripts ${host}

exec ~/nixos-conf/min-iso/iso-scripts/gen-iso-${1}
exec ~/nixos-conf/min-iso/iso-scripts/iso-scripts/burn-iso ${1} ${2}
